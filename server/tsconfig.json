{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@common/*": ["../../common/src/*"]
    }
  },
  "references": [{ "path": "../common" }]
}
